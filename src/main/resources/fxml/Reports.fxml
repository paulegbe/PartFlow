<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane styleClass="mainScreen" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.partflow.controller.ReportsController">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header -->
            <Label styleClass="pageTitle" text="Reports">
               <font>
                  <Font name="Microsoft JhengHei Bold" size="24.0" />
               </font>
            </Label>

            <!-- Summary Statistics -->
            <HBox spacing="20.0">
               <children>
                  <Label fx:id="totalSalesLabel" styleClass="summaryLabel" text="Total Sales: 0" />
                  <Label fx:id="totalRevenueLabel" styleClass="summaryLabel" text="Total Revenue: $0.00" />
                  <Label fx:id="totalPartsLabel" styleClass="summaryLabel" text="Total Parts: 0" />
                  <Label fx:id="lowStockLabel" styleClass="summaryLabel" text="Low Stock Items: 0" />
               </children>
            </HBox>

            <!-- Report Generation Section -->
            <VBox spacing="15.0">
               <children>
                  <Label styleClass="contentTitle" text="Generate Report" />
                  <HBox spacing="20.0" alignment="CENTER_LEFT">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Report Type:" />
                              <ChoiceBox fx:id="reportTypeChoiceBox" prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Period:" />
                              <ChoiceBox fx:id="periodChoiceBox" prefWidth="120.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="" />
                              <Button fx:id="generateButton" mnemonicParsing="false" text="Generate Report" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>

            <!-- Report Content Area -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <Label styleClass="contentTitle" text="Report Content" />
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="exportButton" mnemonicParsing="false" text="Export Report" />
                     </children>
                  </HBox>
                  <TextArea fx:id="reportContentArea" editable="false" promptText="Generated report content will appear here..." VBox.vgrow="ALWAYS" />
               </children>
            </VBox>

            <!-- Report History Table -->
            <VBox spacing="10.0" prefHeight="200.0">
               <children>
                  <Label styleClass="contentTitle" text="Report History" />
                  <TableView fx:id="reportsTable" prefHeight="150.0">
                     <columns>
                        <TableColumn fx:id="reportTypeColumn" prefWidth="150.0" text="Report Type" />
                        <TableColumn fx:id="periodColumn" prefWidth="120.0" text="Period" />
                        <TableColumn fx:id="generatedOnColumn" prefWidth="200.0" text="Generated On" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
