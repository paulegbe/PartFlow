<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            styleClass="mainScreen"
            stylesheets="@../css/style.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.partflow.controller.DashboardController">

   <children>
      <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>

         <!-- Header -->
         <Label text="Dashboard" styleClass="pageTitle">
            <font>
               <Font name="Microsoft JhengHei Bold" size="24.0"/>
            </font>
         </Label>

         <!-- Dashboard Cards -->
         <HBox spacing="20">
            <VBox styleClass="dashboard-card" spacing="10">
               <Label text="Total Parts"/>
               <Label fx:id="totalPartsLabel" text="0" styleClass="dashboard-value"/>
            </VBox>
            <VBox styleClass="dashboard-card" spacing="10">
               <Label text="Low Stock Alert"/>
               <Label fx:id="lowStockLabel" text="0" styleClass="dashboard-value"/>
            </VBox>
            <VBox styleClass="dashboard-card" spacing="10">
               <Label text="Sales Today"/>
               <Label fx:id="salesTodayLabel" text="0" styleClass="dashboard-value"/>
            </VBox>
            <VBox styleClass="dashboard-card" spacing="10">
               <Label text="Out of Stock"/>
               <Label fx:id="outOfStockLabel" text="0" styleClass="dashboard-value"/>
            </VBox>
         </HBox>

         <!-- Tables Section -->
         <HBox spacing="20">
            <!-- Low Stock Table -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
               <Label text="Low Stock Parts" styleClass="contentTitle"/>
               <TableView fx:id="lowStockTable" prefHeight="200">
                  <columns>
                     <TableColumn fx:id="lowStockPartColumn" text="Part" prefWidth="200"/>
                     <TableColumn fx:id="lowStockQtyColumn" text="Stock" prefWidth="100"/>
                  </columns>
               </TableView>
            </VBox>

            <!-- Sales Report Table -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
               <Label text="Sales Report" styleClass="contentTitle"/>
               <TableView fx:id="salesReportTable" prefHeight="200">
                  <columns>
                     <TableColumn fx:id="saleDateColumn" text="Date" prefWidth="200"/>
                     <TableColumn fx:id="saleAmountColumn" text="Sales" prefWidth="100"/>
                  </columns>
               </TableView>
            </VBox>
         </HBox>
      </VBox>
   </children>
</AnchorPane>
