<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="mainScreen"
            stylesheets="@../css/style.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.partflow.controller.SalesController">

   <children>
      <VBox layoutX="6.0" layoutY="6.0" prefHeight="392.0" prefWidth="579.0" spacing="10">
         <children>

            <!-- Title -->
            <Label styleClass="pageTitle" text="Sales">
               <font>
                  <Font name="Microsoft JhengHei Bold" size="24.0" />
               </font>
            </Label>

            <!-- Search & Record Button Row -->
            <HBox spacing="10">
               <TextField fx:id="searchField"
                          prefHeight="29.0"
                          promptText="Search by 'Part Name'" />
               <Button fx:id="recordSaleBtn"
                       text="Record Sale"
                       onAction="#handleRecordSale"
                       prefHeight="29.0"
                       prefWidth="120.0" />
            </HBox>

            <!-- Sale Entry Form -->
            <HBox spacing="10">
               <ComboBox fx:id="partComboBox"
                         promptText="Select Part"
                         prefWidth="300" />
               <TextField fx:id="quantityField"
                          promptText="Quantity"
                          prefWidth="100" />
            </HBox>

            <!-- Sales Table -->
            <TableView fx:id="salesTable" prefHeight="200.0">
               <columns>
                  <TableColumn fx:id="colDate" prefWidth="75.0" text="Date" />
                  <TableColumn fx:id="colPart" prefWidth="119.0" text="Part" />
                  <TableColumn fx:id="colQuantity" prefWidth="123.0" text="Quantity" />
                  <TableColumn fx:id="colPrice" prefWidth="123.0" text="Unit Price" />
                  <TableColumn fx:id="colTotal" prefWidth="168.0" text="Total" />
               </columns>
            </TableView>

         </children>
         <padding>
            <Insets top="20.0" right="40.0" bottom="20.0" left="40.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
