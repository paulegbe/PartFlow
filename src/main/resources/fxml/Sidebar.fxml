<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<!-- Sidebar.fxml -->

<VBox prefHeight="474.0" prefWidth="168.0" spacing="10" style="-fx-background-color: #1D2939; -fx-padding: 20;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.partflow.controller.SidebarController">

    <fx:define>
        <ToggleGroup fx:id="navGroup" />
    </fx:define>

    <Pane>
        <children>
            <ImageView fx:id="logo_White" fitHeight="53.0" fitWidth="128.0" pickOnBounds="true" preserveRatio="true" />
        </children>
        <opaqueInsets>
            <Insets bottom="50.0" />
        </opaqueInsets>
    </Pane>

    <VBox prefHeight="113.0" prefWidth="128.0" />

    <ToggleButton onAction="#goToDashboard" selected="true" styleClass="nav_button" text="Dashboard">
      <toggleGroup>
         <ToggleGroup fx:id="navGroup" />
      </toggleGroup></ToggleButton>
    <ToggleButton onAction="#goToInventory" styleClass="nav_button" text="Inventory" toggleGroup="$navGroup" />
    <ToggleButton onAction="#goToSales" styleClass="nav_button" text="Sales" toggleGroup="$navGroup" />
    <ToggleButton onAction="#goToVendors" styleClass="nav_button" text="Vendors" toggleGroup="$navGroup" />
    <ToggleButton onAction="#goToReports" styleClass="nav_button" text="Reports" toggleGroup="$navGroup" />
    <ToggleButton onAction="#goToRestocking" styleClass="nav_button" text="Restocking" toggleGroup="$navGroup" />

    <VBox prefHeight="200.0" prefWidth="100.0">
        <children>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
                <bottom>
                    <ToggleButton mnemonicParsing="false" onAction="#handleLogout" styleClass="nav_button" text="LogOut" BorderPane.alignment="CENTER" />
                </bottom>
            </BorderPane>
        </children>
    </VBox>
</VBox>
