<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="941.0" prefWidth="1117.0" styleClass="mainScreen" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.partflow.controller.InventoryController">
    <children>
        <VBox prefHeight="1200.0" prefWidth="1069.0" spacing="16.0">
            <children>
                <!-- Header Section -->
                <HBox prefHeight="100.0" prefWidth="900.0">
                    <children>
                        <BorderPane prefHeight="100.0" prefWidth="900.0">
                            <left>
                                <Label styleClass="pageTitle" text="Inventory" BorderPane.alignment="CENTER">
                                    <font>
                                        <Font name="Microsoft JhengHei Bold" size="24.0" />
                                    </font>
                                </Label>
                            </left>
                            <right>
                                <Button fx:id="addPartButton" mnemonicParsing="false" onAction="#handleAddPart" prefHeight="25.0" prefWidth="91.0" text="Add Parts" BorderPane.alignment="CENTER" />
                            </right>
                        </BorderPane>
                    </children>
                </HBox>

                <!-- Input Form Section -->
                <VBox spacing="20.0">
                    <children>
                        <HBox spacing="10.0">
                            <Label text="Part Name:" />
                            <TextField fx:id="partNameField" />
                            <Label text="Part Number:" />
                            <TextField fx:id="partNumberField" />
                            <Label text="Price:" />
                            <TextField fx:id="priceField" />
                        </HBox>
                        <HBox spacing="10.0">
                            <Label text="Quantity:" />
                            <TextField fx:id="quantityField" />
                            <Label text="Vendor:" />
                            <TextField fx:id="vendorField" />
                            <CheckBox fx:id="inStockCheckBox" text="In Stock" />
                        </HBox>
                    </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="30.0" />
               </padding>
                </VBox>

                <!-- Table Section -->
                <TableView fx:id="partsTable" prefHeight="311.0" prefWidth="1029.0">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="130.0" text="Part Name" />
                        <TableColumn fx:id="priceColumn" prefWidth="154.0" text="Price" />
                        <TableColumn fx:id="numberColumn" prefWidth="167.0" text="Part Number" />
                        <TableColumn fx:id="quantityColumn" prefWidth="147.0" text="Quantity" />
                        <TableColumn fx:id="statusColumn" prefWidth="117.0" text="Status" />
                        <TableColumn fx:id="vendorColumn" prefWidth="117.0" text="Vendor" />
                        <TableColumn fx:id="actionColumn" prefWidth="160.0" text="Actions" />

                    </columns>
                </TableView>
            </children>

            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
